<Window x:Class="kladmen.Stroy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kladmen"
        mc:Ignorable="d"
        Title="Stroy" MinHeight="450" MinWidth="800">
    <Viewbox>
        <Grid Height="450" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="180*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200" FontSize="40" Click="Button_Click"/>
            <TextBlock Text="Стройматериалы" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="317" Grid.Row="0"/>
            <ListBox x:Name="list_stroy" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Height="115" Width="779">
                            <TextBlock Text="{Binding Path=Name}" Width="779" VerticalAlignment="Top" Height="38" HorizontalAlignment="Center" FontSize="30"/>
                            <StackPanel Orientation="Horizontal" Height="28">
                                <TextBlock Text="Единица измерения: " FontSize="20"/>
                                
                                <TextBlock Text="{Binding Path=Ed_izm}" FontSize="20"/>
                                <TextBlock Width="10"/>
                                <TextBlock Text="Остаток на складе: " FontSize="20"/>
                               
                                <TextBlock Text="{Binding Path=Ostatok}" FontSize="20"/>
                                <TextBlock Width="10"/>

                                <TextBlock Text="Находится на складе: " FontSize="20"/>
                                
                                <TextBlock Text="{Binding Path=ID_Sklad}" FontSize="20"/>
                                <TextBlock Width="10"/>

                            </StackPanel>
                            <StackPanel Height="10" />
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Редактировать"/>
                                <TextBlock Width="100"/>
                                <Button VerticalAlignment="Center" HorizontalAlignment="Center" Content="Удалить"/>
                            </StackPanel>
                           
                        </StackPanel>
                        
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Viewbox>
</Window>
